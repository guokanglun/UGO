/* pages/goods_detail/goods_detail.wxss */
page{
    padding-bottom: 90rpx;
}
swiper{
    width: 100%;
    height: 500rpx
}
swiper swiper-item{
    display: flex;
    justify-content: center;

}
swiper image{
    width: 60%;
}

.goods_price{
    color: #eb4450;
    font-weight: 800;
    padding: 20rpx;
    font-size: 32rpx;
}

.goods_title_sc{
    display: flex;
    border-bottom: 5px solid #ccc;
    padding-bottom: 20rpx;
}

.goods_title_sc .title{
    flex:5;
    padding: 0 20rpx;
}

.goods_title_sc .sc{
    flex:1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-left:1px solid #aaa;
}

.desc .title{
    color: #eb4450;
    font-size: 32rpx;
    font-weight: 800;
    padding: 20rpx;
}

.bottom-tool{
    position: fixed;
    left:0;
    bottom:0;
    width: 100%;
    height: 90rpx;
    display: flex;
    background-color: white;
}

.contact{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex: 1;
    font-size: 22rpx;
    position: relative;
}
.contact button{
    position: absolute;
    top:0;
    left:0;
    width: 100%;
    height: 100%;
    opacity: 0;
}
.share{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex: 1;
    font-size: 22rpx;
    position: relative;
}
.share button{
    position: absolute;
    top:0;
    left:0;
    width: 100%;
    height: 100%;
    opacity: 0;
}
.cart{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex: 1;
    font-size: 22rpx;
}

.add-cart{
    flex:2;
    text-align: center;
    line-height: 90rpx;
    background-color: #ffa500;
    font-size: 28rpx;
    color:white;
}

.buy{
    flex:2;
    text-align: center;
    line-height: 90rpx;
    background-color: #eb4450;
    font-size: 28rpx;
    color:white;
}

.icon-shoucang1{
    color:red
}