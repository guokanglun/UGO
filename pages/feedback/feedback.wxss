/* pages/feedback/feedback.wxss */
page{
    background-color: #ccc;
}
.fd_title{
    color:#666;
    padding: 20rpx;
}

.fd-item-wrap{
    display: flex;
    flex-wrap: wrap;
    margin-left: 40rpx;
}

.fd-item-wrap .fd-item{
    width: 30%;
    background-color: white;
    margin-bottom: 20rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color:#666;
    margin-right: 20rpx;
}
.text-area{
    background-color: white;
    margin: 40rpx;
}

.text-area textarea{
    padding:20rpx
}

.text-area .upload{
    display: flex;
}
.text-area .upload .upload-item{
    display: flex;
    flex-wrap: wrap;
}
.text-area .upload button{
    width: 90rpx;
    height: 90rpx;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
}


.submit-btn{
    display: flex;
    justify-content: flex-end;
}

.submit-btn button{
    width: 180rpx;
    height: 90rpx;
    background-color: #eb4450;
    margin-right: 30rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    color:white
}

.submit-btn button icon{
    background-color: #eb4450;
    border-radius: 50%;
}