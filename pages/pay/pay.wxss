page{
    padding-bottom: 90rpx;
}
.userInfo{
    display: flex;
    padding: 20rpx;
}
.userInfo .positionInfo{
    flex:5;
}
.userInfo .phone{
    flex:3;
    text-align: right;
}

.cart-title{
    border-top: 5rpx solid #eb4450;
    border-bottom: 5rpx solid #eb4450;
    font-size: 36rpx;
    font-weight: 700;
    color:#eb4450;
    padding: 20rpx;
}

.good-list{
    display: flex;
    padding: 20rpx;
    justify-content: space-between;
    border-bottom: 3px solid #ccc;
}

.good-list .img{
    flex: 2;
}
.good-list .img image{
    width: 100%;
}
.good-list .good-info{
    flex:5;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding-left: 20rpx;
}
.good-list .good-info .title{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.good-list .good-info .price-wrap{
    display: flex;
    justify-content: space-between;
}

.good-list .good-info .price-wrap .price{
    font-size: 30rpx;
    color: #eb4450
}

.footer-tool{
    position: fixed;
    bottom: 0;
    left:0;
    width: 100%;
    display: flex;
    height: 90rpx;
}

.footer-tool .price-wrap{
    flex: 5;
    text-align: right;
    padding-right: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.footer-tool .price-wrap .price text{
    color: #eb4450;
}
.footer-tool .price-wrap .isM{
    font-size: 25rpx;
}
.footer-tool .pay{
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #eb4450;
    color:white;
}